.menu {
  padding-top: 20rpx;
  height: 100vh;
  box-sizing: border-box;
  background-color: #fff;
}
.menu .item {
  float: left;
  width: 33.33%;
  text-align: center;
  padding: 30rpx 0;
}
.menu .item image {
  display: block;
  width: 120rpx;
  height: 120rpx;
  margin: auto;
  margin-bottom: 20rpx;
}
.menu .item text {
  color: #333333;
  font-size: 30rpx;
}
