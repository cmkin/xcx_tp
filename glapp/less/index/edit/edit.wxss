.index_edit .main {
  padding: 20rpx;
}
.index_edit .main .add {
  width: 280rpx;
  height: 280rpx;
  margin: 40rpx auto;
  background: #D3E8FF;
  border-radius: 12rpx;
  text-align: center;
  overflow: hidden;
  box-sizing: border-box;
}
.index_edit .main .add .no {
  padding-top: 30rpx;
  color: #288CFF;
}
.index_edit .main .add .no image {
  display: block;
  margin: 40rpx auto;
  width: 60rpx;
  height: 60rpx;
}
.index_edit .main .add .has {
  width: 100%;
  height: 100%;
  position: relative;
}
.index_edit .main .add .has .img {
  display: block;
  width: 100%;
  height: 100%;
}
.index_edit .main .add .has .del {
  position: absolute;
  right: 0;
  top: 0;
  width: 30rpx;
  height: 30rpx;
}
.index_edit .main .list_wrap {
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
}
.index_edit .main .list_wrap .t {
  padding-top: 20rpx;
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}
.index_edit .main .li {
  border-bottom: 1px solid #E5E5E5;
  padding: 20rpx 0;
}
.index_edit .main .li > text {
  color: #333;
}
.index_edit .main .li input {
  float: right;
  text-align: right;
}
.index_edit .main .li .r {
  float: right;
  color: #666;
}
.index_edit .main .li .r text {
  color: #666;
}
.index_edit .main .li .r image {
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  position: relative;
  top: 3px;
}
.index_edit .main .li2 input {
  float: none;
  text-align: left;
}
.index_edit .main .li:last-child {
  border: none;
}
.index_edit .main .btns {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  display: flex;
  z-index: 10;
  box-shadow: 0px -8px 8px 0px rgba(0, 0, 0, 0.04);
}
.index_edit .main .btns text {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  padding: 30rpx 0;
  color: #288CFF;
}
.index_edit .main .btns text:last-child {
  background: linear-gradient(270deg, #2A74FF 0%, #2AA0FF 100%);
  color: #fff;
}
.index_edit .main .close_alert {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 100;
  background-color: rgba(0, 0, 0, 0.5);
}
.index_edit .main .close_alert .main {
  background-color: #fff;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 30rpx;
  min-height: 30vh;
  max-height: 70vh;
  overflow-y: auto;
  border-radius: 20px 20px 0 0;
  box-sizing: border-box;
}
.index_edit .main .close_alert .main .tags {
  padding: 20rpx;
  background-color: #ffffff;
  box-sizing: border-box;
  padding: 30rpx 0;
}
.index_edit .main .close_alert .main .tags text,
.index_edit .main .close_alert .main .tags view {
  background-color: #F2F2F2;
  color: #666666;
  font-size: 24rpx;
  margin-bottom: 10px;
  padding: 7px;
  float: left;
  width: 31%;
  border: 1px solid transparent;
  border-radius: 20px;
  text-align: center;
  box-sizing: border-box;
}
.index_edit .main .close_alert .main .tags text:nth-child(3n-1) {
  margin: 0 3.5%;
  margin-bottom: 10px;
}
.index_edit .main .close_alert .main .tags view:nth-child(3n-1) {
  margin: 0 3.5%;
  margin-bottom: 10px;
}
.index_edit .main .close_alert .main .tags .active {
  border-color: #288CFF;
  color: #288CFF;
  background-color: rgba(40, 140, 255, 0.1);
}
.index_edit .main .close_alert .main .t {
  padding-bottom: 30rpx;
}
.index_edit .main .close_alert .main .t image {
  float: right;
  width: 20rpx;
  height: 20rpx;
}
.index_edit .main .close_alert .main .t text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}
