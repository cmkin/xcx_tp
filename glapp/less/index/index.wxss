.index .main > view {
  height: 100%;
  float: left;
  box-sizing: border-box;
  overflow-y: auto;
}
.index .main .left {
  background-color: #fff;
  padding: 30rpx;
  width: 20%;
  box-shadow: 8px 0px 8px 0px rgba(0, 0, 0, 0.03);
  box-sizing: border-box;
}
.index .main .left .li {
  margin-bottom: 20rpx;
}
.index .main .left .li text {
  display: block;
  width: 100%;
  padding: 10rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}
.index .main .left .li .active {
  background-color: #288CFF;
  color: #fff;
}
.index .main .right {
  width: 80%;
  padding: 20rpx;
  position: relative;
  box-sizing: border-box;
  padding-bottom: 80rpx;
}
.index .main .right .li {
  float: left;
  width: 48.5%;
  margin-bottom: 20rpx;
  background-color: #fff;
  box-shadow: 0px 2px 4px 0px rgba(0, 0, 0, 0.02);
  border-radius: 16rpx;
  padding: 20rpx;
  border: 1px solid #fff;
  box-sizing: border-box;
  position: relative;
  transition: all 0.5s;
}
.index .main .right .li .img {
  display: block;
  width: 100%;
  height: 230rpx;
  border-radius: 10rpx;
}
.index .main .right .li text {
  display: block;
  font-size: 26rpx;
  margin-top: 20rpx;
  text-align: center;
}
.index .main .right .li .yb {
  position: absolute;
  top: 0;
  right: 0;
  width: 60rpx;
  height: 45rpx;
  display: none;
}
.index .main .right .li:nth-child(2n) {
  margin-left: 3%;
}
.index .main .right .active {
  border: 1px solid #288CFF;
}
.index .main .right .active .yb {
  display: block;
}
.index .main .right .add {
  position: fixed;
  right: 30rpx;
  bottom: 100rpx;
  width: 60rpx;
  height: 60rpx;
}
.index .main .right .delete {
  background: #FFFFFF;
  box-shadow: 0px -1px 0px 0px #E5E5E5;
  position: fixed;
  bottom: 0;
  right: 0;
  width: 80%;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}
.index .main .right .delete .l {
  float: left;
}
.index .main .right .delete .r {
  float: right;
}
.index .main .right .delete .r text {
  color: #288CFF;
}
