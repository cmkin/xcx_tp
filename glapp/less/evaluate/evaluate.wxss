.evaluate .search {
  background-color: #fff;
  padding: 20rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
  width: 100%;
  box-shadow: 0px 12px 12px 0px rgba(0, 0, 0, 0.04);
  box-sizing: border-box;
}
.evaluate .search > input {
  background-color: #F2F2F2;
  display: block;
  border-radius: 20px;
  padding: 5px 20px;
}
.evaluate .search .selects {
  display: flex;
  padding-top: 20rpx;
}
.evaluate .search .i {
  flex: 1;
  text-align: center;
}
.evaluate .search .i image {
  display: inline-block;
  width: 20rpx;
  height: 10rpx;
  position: relative;
  top: -3px;
}
.evaluate .pingjia {
  padding: 15px;
  padding-top: 180rpx;
  box-sizing: border-box;
}
.evaluate .pingjia .i {
  background: #FFFFFF;
  box-shadow: 1px 1px 10px 0px rgba(0, 0, 0, 0.02);
  border-radius: 8px;
  margin-bottom: 15px;
  padding: 15px;
}
.evaluate .pingjia .i .tt > text {
  color: #333333;
  font-size: 30rpx;
  font-weight: bold;
}
.evaluate .pingjia .i .tt .pj {
  float: right;
}
.evaluate .pingjia .i .tt .pj text {
  font-size: 14px;
  position: relative;
  top: -2px;
  margin-right: 5px;
}
.evaluate .pingjia .i .tags {
  color: #666;
  margin: 10px 0;
}
.evaluate .pingjia .i .tags text {
  display: inline-block;
  background: #F0F4FC;
  border-radius: 4px;
  padding: 1px 5px;
  margin-right: 10px;
  color: #7081A0;
  font-size: 12px;
}
.evaluate .pingjia .i .cc {
  color: #333333;
  font-size: 26rpx;
  padding: 10px 0;
  padding-top: 0;
  border-bottom: 1px solid #E5E5E5;
}
.evaluate .pingjia .i .time {
  font-size: 14px;
  color: #999;
  padding-top: 10px;
}
.evaluate .pingjia .i .time text {
  float: right;
  color: #288CFF;
}
.evaluate .select_tag {
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: 1;
  box-sizing: border-box;
  background-color: rgba(0, 0, 0, 0.5);
}
.evaluate .select_tag .m {
  background-color: #fff;
  border-radius: 0 0 10px 10px;
}
.evaluate .select_tag .m .tags {
  max-height: 70vh;
  overflow-y: auto;
  padding: 20rpx;
}
.evaluate .select_tag .m .tags text {
  float: left;
  width: 31%;
  background-color: #F2F2F2;
  text-align: center;
  margin-bottom: 10px;
  padding: 6px 0;
  font-size: 24rpx;
  border-radius: 20px;
  border: 1px solid transparent;
  box-sizing: border-box;
}
.evaluate .select_tag .m .tags .active {
  color: #288CFF;
  border-color: #288CFF;
  background-color: rgba(40, 140, 255, 0.1);
}
.evaluate .select_tag .m .tags text:nth-child(3n-1) {
  margin: 0 3.5%;
}
.evaluate .select_tag .m .lists {
  padding: 20rpx 0;
  padding-top: 0;
}
.evaluate .select_tag .m .lists image {
  float: right;
  width: 25rpx;
  height: 20rpx;
  margin-top: 5px;
  opacity: 0;
}
.evaluate .select_tag .m .lists .i {
  padding: 20rpx;
}
.evaluate .select_tag .m .lists .i:first-child {
  padding-top: 0;
}
.evaluate .select_tag .m .lists .active {
  background-color: #E9F3FF;
  color: #288CFF;
}
.evaluate .select_tag .m .lists .active image {
  opacity: 1;
}
