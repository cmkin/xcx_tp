.cook .items {
  padding: 30rpx;
}
.cook .items .item {
  background: #FFFFFF;
  box-shadow: 1px 1px 10px 0px rgba(0, 0, 0, 0.02);
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  padding: 20rpx;
}
.cook .items .item .t > image {
  border-radius: 5px;
  float: left;
  width: 200rpx;
  height: 240rpx;
  margin-right: 20rpx;
}
.cook .items .item .t .r text {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}
.cook .items .item .t .r view {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 5;
  line-clamp: 5;
  -webkit-box-orient: vertical;
}
.cook .items .item .btnss {
  display: block;
  width: 100%;
  padding-top: 20rpx;
  text-align: right;
}
.cook .items .item .btnss text {
  display: inline-block;
  border-radius: 27rpx;
  border: 1px solid #C6CAD3;
  margin-left: 20rpx;
  font-size: 22rpx;
  padding: 3px 10px;
}
.cook .ads {
  position: fixed;
  right: 30rpx;
  bottom: 100rpx;
  width: 100rpx;
  height: 100rpx;
  z-index: 1;
}
.cook .nodata {
  padding-top: 20vh;
}
.cook .nodata > image {
  display: block;
  width: 200rpx;
  height: 285rpx;
  margin: auto;
}
.cook .nodata .j {
  text-align: center;
  padding: 20rpx 0;
  font-size: 30rpx;
  color: #B3BDC4;
}
.cook .nodata .add {
  background: linear-gradient(to right, #2A74FF, #2AA0FF);
  color: #fff;
  width: 40%;
  margin: auto;
  padding: 16rpx 0;
  border-radius: 20px;
  text-align: center;
  margin-top: 50rpx;
}
.cook .nodata .add image {
  display: inline-block;
  width: 26rpx;
  height: 26rpx;
}
.cook .add_alert {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
  background-color: rgba(0, 0, 0, 0.5);
}
.cook .add_alert .main {
  background-color: #fff;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 30rpx;
  border-radius: 20px 20px 0 0;
  padding-bottom: 160rpx;
  box-sizing: border-box;
}
.cook .add_alert .main .t {
  padding-bottom: 30rpx;
}
.cook .add_alert .main .t image {
  float: right;
  width: 20rpx;
  height: 20rpx;
}
.cook .add_alert .main .t text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}
.cook .add_alert .main .add {
  width: 200rpx;
  height: 240rpx;
  background: #D3E8FF;
  border-radius: 12rpx;
  text-align: center;
  overflow: hidden;
  box-sizing: border-box;
  display: inline-block;
}
.cook .add_alert .main .add .no {
  padding-top: 30rpx;
  color: #288CFF;
}
.cook .add_alert .main .add .no image {
  display: block;
  margin: 40rpx auto;
  width: 60rpx;
  height: 60rpx;
}
.cook .add_alert .main .add .no text {
  color: #288CFF;
}
.cook .add_alert .main .add .has {
  width: 100%;
  height: 100%;
  position: relative;
}
.cook .add_alert .main .add .has .img {
  display: block;
  width: 100%;
  height: 100%;
}
.cook .add_alert .main .add .has .del {
  position: absolute;
  right: 0;
  top: 0;
  width: 30rpx;
  height: 30rpx;
}
.cook .add_alert .main .add_wrap input {
  display: inline-block;
  width: 470rpx;
  margin-left: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #E5E5E5;
}
.cook .add_alert .main .textarea {
  margin: 30rpx 0;
  padding: 10px;
  background-color: #F7F8FC;
  display: block;
  width: 100%;
  box-sizing: border-box;
  border-radius: 5px;
}
.cook .add_alert .main .btns {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  display: flex;
  box-shadow: 0px -8px 8px 0px rgba(0, 0, 0, 0.04);
}
.cook .add_alert .main .btns view {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  color: #288CFF;
}
.cook .add_alert .main .btns view image {
  width: 30rpx;
  height: 30rpx;
  display: inline-block;
  transform: rotate(-90deg);
  position: relative;
  top: 3px;
}
.cook .add_alert .main .btns view:last-child {
  background: linear-gradient(270deg, #2A74FF 0%, #2AA0FF 100%);
  color: #fff;
}
.cook .add_alert .main .btns view:first-child {
  padding: 20rpx 0;
}
.cook .add_alert .main .btns button {
  padding: 20rpx 0;
  display: block;
  width: 100%;
  font-weight: normal;
  background: linear-gradient(270deg, #2A74FF 0%, #2AA0FF 100%);
}
