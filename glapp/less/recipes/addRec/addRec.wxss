.addRec .title {
  text-align: center;
  padding: 30rpx;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 100;
  box-shadow: 0px 12px 12px 0px rgba(0, 0, 0, 0.04);
  background-color: #fff;
  box-sizing: border-box;
}
.addRec .title .l {
  float: left;
}
.addRec .title text {
  font-weight: 36rpx;
  color: #333;
  font-weight: bold;
}
.addRec .title .r {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
}
.addRec .title image {
  width: 35rpx;
  height: 35rpx;
}
.addRec .tags {
  padding: 20rpx;
  background-color: #ffffff;
  box-sizing: border-box;
  padding: 120rpx 0;
}
.addRec .tags > text,
.addRec .tags view {
  background-color: #F2F2F2;
  color: #666666;
  font-size: 24rpx;
  margin-bottom: 10px;
  padding: 7px;
  float: left;
  width: 31%;
  border: 1px solid transparent;
  border-radius: 20px;
  text-align: center;
  box-sizing: border-box;
}
.addRec .tags > text:nth-child(3n-1) {
  margin: 0 3.5%;
  margin-bottom: 10px;
}
.addRec .tags > view:nth-child(3n-1) {
  margin: 0 3.5%;
  margin-bottom: 10px;
}
.addRec .tags .active {
  border-color: #288CFF;
  color: #288CFF;
  background-color: rgba(40, 140, 255, 0.1);
}
.addRec .btns {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  display: flex;
  box-shadow: 0px -8px 8px 0px rgba(0, 0, 0, 0.04);
}
.addRec .btns view {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  padding: 30rpx 0;
  color: #288CFF;
}
.addRec .btns view image {
  width: 30rpx;
  height: 30rpx;
  display: inline-block;
  transform: rotate(-90deg);
  position: relative;
  top: 3px;
}
.addRec .btns view:last-child {
  background: linear-gradient(270deg, #2A74FF 0%, #2AA0FF 100%);
  color: #fff;
}
.addRec .close_alert {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 100;
  background-color: rgba(0, 0, 0, 0.5);
}
.addRec .close_alert .main {
  background-color: #fff;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 30rpx;
  min-height: 30vh;
  max-height: 70vh;
  overflow-y: auto;
  border-radius: 20px 20px 0 0;
  box-sizing: border-box;
}
.addRec .close_alert .main .tags {
  height: auto;
  padding-top: 20rpx;
  padding: 0;
}
.addRec .close_alert .main .tags view {
  position: relative;
}
.addRec .close_alert .main .tags view image {
  width: 16rpx;
  height: 16rpx;
  float: right;
  margin-right: 5px;
  margin-top: 5px;
}
.addRec .close_alert .main .t {
  padding-bottom: 30rpx;
}
.addRec .close_alert .main .t image {
  float: right;
  width: 20rpx;
  height: 20rpx;
}
.addRec .close_alert .main .t text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}
