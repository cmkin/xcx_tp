/* navbar.wxss */
/*自定义导航栏*/
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 999999;
  background-color: #288CFF;
}
.bg{
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	width: 100%;
	height: 100%;
	display: block;
}
.logo{
  width: 120rpx;
  height: 60rpx;
  position:absolute ;
  bottom: 25rpx;
  left: 5%;
}
.nav-bar-white {
  
}

.navbar-title {
  position: absolute;
  height: 32px;
  line-height: 32px;
  /* width: 100%; */
  width: 320rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  left: 28%;
}
.home{
	display: inline-block;
	width: 40rpx;
	height: 40rpx;
	margin-left: 30rpx;
}
.navbar-icon-wrap {
  position: absolute;
  left: 9px;
  min-width: 44px;
  height: 32px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.navbar-icon {
  width: 25rpx;
  height: 30rpx;
}

.navbar-scan {
  width: 28px;
  height: 28px;
}